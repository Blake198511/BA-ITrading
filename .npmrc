# NPM Configuration for Production Deployments
# This ensures clean, secure, and optimized builds

# Save exact versions (not ranges) for better reproducibility
save-exact=true

# Prevent package-lock.json from being updated automatically
package-lock=true

# Audit installed packages for security vulnerabilities
audit=true

# Use npm ci for faster, cleaner installs in CI/CD
# (npm ci is automatically used when package-lock.json exists)
