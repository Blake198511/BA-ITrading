# Evon AI Environment Configuration
# Copy this file to .env and fill in your actual API keys

# 1. OPENAI_KEY - Evon's brain (chat, reasoning, analysis)
OPENAI_KEY=your_openai_api_key_here

# 2. ELEVEN_KEY - Evon's voice (text-to-speech)
ELEVEN_KEY=your_elevenlabs_api_key_here

# 3. ELEVEN_VOICE_ID - Which ElevenLabs voice Evon uses (e.g., Rachel)
ELEVEN_VOICE_ID=your_voice_id_here

# 4. MONGODB_URI - Database to store user data, logs, watchlists, etc.
MONGODB_URI=your_mongodb_connection_string_here

# 5. POLYGON_KEY - Stock market data (quotes, OHLC, aggregates)
POLYGON_KEY=your_polygon_api_key_here

# 6. NEWS_API_KEY - Top news headlines & finance news feeds
NEWS_API_KEY=your_news_api_key_here

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# App Password Protection (set this to secure your app)
APP_PASSWORD=your_secure_password_here
