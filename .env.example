# Evon AI Environment Configuration
# Copy this file to .env and fill in your actual API keys

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Trading API Configuration
TRADING_API_KEY=your_trading_api_key_here
TRADING_API_SECRET=your_trading_api_secret_here
TRADING_API_URL=https://api.example.com

# Application Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here

# Database (if needed)
DATABASE_URL=your_database_url_here

# External Services
MARKET_DATA_API_KEY=your_market_data_api_key_here
NEWS_API_KEY=your_news_api_key_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here

# Voice/TTS (optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
